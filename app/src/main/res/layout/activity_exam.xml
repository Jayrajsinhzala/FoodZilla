<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exam">

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="@+id/ratingBarMax"
        app:layout_constraintStart_toStartOf="@+id/ratingBarMax"
        app:layout_constraintTop_toBottomOf="@+id/ratingBarMax" />

    <RatingBar
        android:id="@+id/ratingBarMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="96dp"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <RatingBar
        android:id="@+id/ratingBarMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="@+id/ratingBarMin"
        app:layout_constraintStart_toStartOf="@+id/ratingBarMin"
        app:layout_constraintTop_toBottomOf="@+id/ratingBarMin"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Min"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBarMin"
        app:layout_constraintEnd_toStartOf="@+id/ratingBarMin"
        app:layout_constraintTop_toTopOf="@+id/ratingBarMin" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBarMax"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/ratingBarMax" />

</androidx.constraintlayout.widget.ConstraintLayout>